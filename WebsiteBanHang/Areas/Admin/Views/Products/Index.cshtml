@model IEnumerable<WebsiteBanHang.Context.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">TẤT CẢ SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create","Products")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i>Thêm</a>
                        <a href="@Url.Action("Trash","Products")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i>Thùng Rác</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Avatar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryId)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.ShortDes)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.FullDescription)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PriceDiscount)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.TypeId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Slug)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BrandId)
                            </th>
                           @*<th>
                                @Html.DisplayNameFor(model => model.Deleted)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.ShowOnHomePage)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.DisplayOrder)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedOnUtc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UpdatedOnUtc)
                            </th>*@
                            <th> Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="width:80px">
                                    <img src="~/Content/images/items/@item.Avatar" class="img-fluid" alt="#" /> 
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryId)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ShortDes)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullDescription)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PriceDiscount)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BrandId)
                                </td>
                                 @*<td>
                                        @Html.DisplayFor(modelItem => item.Deleted)
                                </td>*@
                            <td>
                                @if (item.ShowOnHomePage == true)
                                {
                                    <a  href="@Url.Action("ShowOnHomePage","Product" , new { id = item.Id })" class="btn btn-sm btn-success "><i class="fas fa-toggle-on "></i></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("ShowOnHomePage","Product" , new { id = item.Id })" class="btn btn-sm btn-dark"><i class="fas fa-toggle-off"></i></a>
                                }
                            </td>
                                 @*<td>
                                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                                 </td>*@
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedOnUtc)
                                    </td>*@
                            <td>
                                <a href="@Url.Action("Details","Products",  new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                                <a href="@Url.Action("Edit","Products",  new { id = item.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("DelTrash","Products", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

