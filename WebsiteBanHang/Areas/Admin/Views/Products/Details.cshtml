@model WebsiteBanHang.Context.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content my-3">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">CHI TIẾT SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Products",  new { id = Model.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i>Cập Nhật</a>
                        <a href="@Url.Action("Index","Products")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Trở Về Danh Sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Avatar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryId)
                            </th>
                            <th>
                               @Html.DisplayNameFor(model => model.ShortDes)
                             </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.FullDescription)
                            </th>*@
                             <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PriceDiscount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TypeId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Slug)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BrandId)
                            </th>
                             @*<th>
                                    @Html.DisplayNameFor(model => model.Deleted)
                             </th>*@
                           
                            @*<th>
                        @Html.DisplayNameFor(model => model.DisplayOrder)
                    </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedOnUtc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UpdatedOnUtc)
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>

                        
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                                <td style="width:80px;">
                                    <img src="~/Content/images/items/@Model.Avatar" class="img-fluid" alt="#" />
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.CategoryId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ShortDes)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(model => model.FullDescription)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(model => model.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PriceDiscount)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.TypeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.BrandId)
                                </td>
                                @*<td>
                                @Html.DisplayFor(modelItem => item.Deleted)
                        </td>*@
                                
                                @*<td>
                               @Html.DisplayFor(modelItem => item.DisplayOrder)
                        </td>*@
                                <td>
                                     @Html.DisplayFor(model => model.CreatedOnUtc)
                                 </td>
                                 <td>
                                      @Html.DisplayFor(model => model.UpdatedOnUtc)
                                </td>
                                
                            </tr>
   
                    </tbody>


                </table>
            </div>
        </div>
    </section>
</div>
